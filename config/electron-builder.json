{
    "appId": "com.electron.streamerific-tools",
    "productName": "StreamerEdu Tools",
    "copyright": "Copyright Â© year ${author}",
    "directories": {
        "output": "dist"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "shortcutName": "StreamerEdu Tools"
    },
    "win": {
        "target": "nsis",
        "icon": "build/renderer/img/icon.png"
    },
    "mac":  {
        "icon": "build/renderer/img/icon.png"
    },
    "files": [
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/node_modules/.bin",
        "!src/renderer",
        "!config",
        "!README.md",
        "!scripts",
        "!build",
        "!dist",
        {
            "from": "build/renderer",
            "to": "renderer",
            "filter": ["**/*"]
        },
        {
            "from": "src/main/static",
            "to": "static",
            "filter": ["**/*"]
        }
    ]
}
