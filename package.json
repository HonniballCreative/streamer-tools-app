{
  "name": "streameredu-tools-app",
  "productName": "StreamerEdu Tools",
  "version": "1.0.0-rc.2",
  "description": "OBS Studio stream tools.",
  "main": "src/main/main.js",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "build": "node scripts/build-vue.js",
    "build:win": "node scripts/build-vue.js && electron-builder --win",
    "build:mac": "node scripts/build-vue.js && electron-builder --mac",
    "build:linux": "node scripts/build-vue.js && electron-builder --linux"
  },
  "repository": "https://github.com/Streamerific/streameredu-tools-app",
  "author": {
    "name": "StreamerEdu",
    "url": "https://StreamerEdu.com"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/cli": "^4.5.15",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "sass": "^1.49.0",
    "vite": "^2.7.13"
  },
  "dependencies": {
    "animate.css": "^4.1.1",
    "bootstrap": "^5.1.3",
    "node-fetch": "^2.6.7",
    "vue": "^3.2.27",
    "vue-router": "^4.0.12",
    "vue3-clipboard": "^1.0.0",
    "xml2js": "^0.4.23"
  },
  "build": {
    "appId": "com.electron.streamerific-tools",
    "productName": "StreamerEdu Tools",
    "copyright": "Copyright Â© year ${author}",
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "StreamerEdu Tools"
    },
    "win": {
      "target": "nsis",
      "icon": "build/renderer/img/icon.png"
    },
    "mac":  {
      "icon": "build/renderer/img/icon.png"
    },
    "files": [
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!src/renderer",
      "!config",
      "!README.md",
      "!scripts",
      "!build",
      "!dist",
      {
        "from": "build/renderer",
        "to": "renderer",
        "filter": ["**/*"]
      },
      {
        "from": "src/main/static",
        "to": "static",
        "filter": ["**/*"]
      }
    ]
  }
}
